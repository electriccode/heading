{
  "compilerOptions": {
    "module": "commonjs",
    "target": "es5",
    "lib": ["es5", "es6", "es7", "es2017", "dom"],
    "jsx": "react",
    "strict": true,
    "declaration": true,
    "esModuleInterop": true,
    "removeComments": true,
    "downlevelIteration": true,
    "moduleResolution": "node",
    "outDir": "./dist/types"
  },
  "include": ["./src"],
  "exclude": [
    "node_modules",
    "dist",
    "**/__tests__/**",
    "**/__mocks__/**",
    "**/*.stories.*"
  ]
}
